<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Image Operator</category>
  <title>Multiply a scale value to Image</title>
  <description>Scale each voxel in a 3D vector image or 4D image.</description>
  
  <contributor>Jian Cheng (jian.cheng.1983@gmail.com)</contributor>
  
  <parameters>
  
    <image>
      <name>_InputFile</name>
      <label>Input File</label>
      <description>Input image file.</description>
      <index>0</index>
      <channel>input</channel>
    </image>
    
    <image>
      <name>_OutputFile</name>
      <label>Output File</label>
      <description>Output image file.</description>
      <index>1</index>
      <channel>output</channel>
    </image>
    
    <double>
      <name>_Scale</name>
      <label>a scale value for multiplication.</label>
      <description>a scale value for multiplication.</description>
      <longflag>--scale</longflag>
      <default>1.0</default>
    </double> 
    
    
  </parameters>
   
</executable>


